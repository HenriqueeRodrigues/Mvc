@using SecretaryWebMvc.Models.Enums
@model SecretaryWebMvc.Models.ViewModels.ActivitiesReportFormViewModel

@{
    ViewData["Title"] = "Adicionar";
}

<h2>@ViewData["Title"]</h2>

<h4>Atividades</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label"> Publicador</label>
                        <select asp-for="ActivitiesReport.PublisherId" asp-items="@(new SelectList( @Model.Publishers,"Id","FullName"))" class="form-control">
                            <option disabled selected>Selecione</option>
                        </select>
                        <span asp-validation-for="ActivitiesReport.Publisher" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Publicações</label>
                        <input asp-for="ActivitiesReport.Publications" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Vídeo</label>
                        <input asp-for="ActivitiesReport.Video" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Horas</label>
                        <input asp-for="ActivitiesReport.Hours" class="form-control" oninvalid="debug(event) required" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Revisitas</label>
                        <input asp-for="ActivitiesReport.Revisits" class="form-control" />
                    </div>

                </div>
                <div class="col-md-6">

                    <div class="form-group">
                        <label class="control-label">Estudos</label>
                        <input asp-for="ActivitiesReport.BibleStudies" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Horas Adicionais</label>
                        <input asp-for="ActivitiesReport.PlusHours" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Observação</label>
                        <input asp-for="ActivitiesReport.Observation" class="form-control" />
                    </div>

                    <div class="form-group row">
                        <div class="col-md-6">
                            <label class="control-label">Mês Padrão </label>
                            <input type="text" value="@Model.SetDateLastMonth()" class="form-control" readonly="readonly" id="text" />
                        </div>
                        <div class="col-md-6">
                            <label> Alterar Mês (Apenas se necessário) </label>
                            <input asp-for="ActivitiesReport.Date" type="month" class="form-control" />
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="form-group row">
                        <div class="col-md-4">
                            <label class="control-label">Pioneiro auxiliar</label>
                            <input type="checkbox" asp-for="ActivitiesReport.IsPionerAux" class="form-check-input " />
                            <span asp-validation-for="ActivitiesReport.IsPionerAux" class="text-danger"></span>
                        </div>
                        <div class="col-md-5">

                            <label class="control-label">Publicador Irregular</label>
                            <input type="checkbox" asp-for="ActivitiesReport.PublisherRelated" class="form-check-input " />
                            <span asp-validation-for="ActivitiesReport.PublisherRelated" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-3" style="justify-content: flex-end">
                            <br />
                            <div class="row">
                                <input type="submit" value="Criar" class="btn btn-default col-md-12 " />
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>


