@model IEnumerable<SecretaryWebMvc.Models.ActivitiesReport>
@{
    ViewData["Title"] = "Atividades Ministeriais";
}

<h2>@ViewData["Title"]</h2>

<br />
<br />
<p>
    <a asp-action="Create" class="btn btn-default bg-primary">Adicionar Atividades</a>
    <a asp-action="SumAssistance" class="btn btn-default bg-primary">Assistência Reunião</a>
</p>
<br />
<br />

<div class="container-fluid">
    <form asp-action="Index" class="navbar-form navbar-left" role="search">
        <div class="form-group">
            <div class="form-group">
                <label>Pesquise por Mês</label>
                <input type="month" class="form-control" name="Date" id="Date" style="margin-left: 20px;" />
            </div>
        </div>
        <button type="submit" class="btn btn-default" style="margin-left: 15px;">Buscar</button>
        <button type="submit" class="btn btn-primary" style="margin-left: 30px;">Voltar com todos os registros</button>
    </form>
</div>
<br />

<table class="table table-striped table-hover">

    <thead>
        <tr class="btn-primary bg-success">
            <th>
                <label>Nome</label>
            </th>
            <th>
                <label>Publicações</label>
            </th>
            <th>
                <label>Video</label>
            </th>
            <th>
                <label>Horas</label>
            </th>
            <th>
                <label>Revisitas</label>
            </th>
            <th>
                <label>Estudos</label>
            </th>
            <th>
                <label>Horas Adicionais</label>
            </th>
            <th>
                <label>Observações</label>
            </th>
            <th>
                <label>Mês</label>
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td align="center">
                    @Html.DisplayFor(x => item.Publisher.FullName)
                </td>
                <td align="center">
                    @Html.DisplayFor(x => item.Publications)
                </td>
                <td align="center">
                    @Html.DisplayFor(x => item.Video)
                </td>
                <td align="center">
                    @Html.DisplayFor(x => item.Hours)
                </td>
                <td align="center">
                    @Html.DisplayFor(x => item.Revisits)
                </td>
                <td align="center">
                    @Html.DisplayFor(x => item.BibleStudies)
                </td>
                <td align="center">
                    @Html.DisplayFor(x => item.PlusHours)
                </td>
                <td align="center">
                    @Html.DisplayFor(x => item.Observation)
                </td>
                <td>
                    @if (item.Date.Month == 1)
                    {
                        @Html.DisplayName("Janeiro")
                    }
                    @if (item.Date.Month == 2)
                    {
                        @Html.DisplayName("Fevereiro")
                    }
                    @if (item.Date.Month == 3)
                    {
                        @Html.DisplayName("Março")
                    }
                    @if (item.Date.Month == 4)
                    {
                        @Html.DisplayName("Abril")
                    }
                    @if (item.Date.Month == 5)
                    {
                        @Html.DisplayName("Maio")
                    }
                    @if (item.Date.Month == 6)
                    {
                        @Html.DisplayName("Junho")
                    }
                    @if (item.Date.Month == 7)
                    {
                        @Html.DisplayName("Julho")
                    }
                    @if (item.Date.Month == 8)
                    {
                        @Html.DisplayName("Agosto")
                    }
                    @if (item.Date.Month == 9)
                    {
                        @Html.DisplayName("Setembro")
                    }
                    @if (item.Date.Month == 10)
                    {
                        @Html.DisplayName("Outubro")
                    }
                    @if (item.Date.Month == 11)
                    {
                        @Html.DisplayName("Novembro")
                    }
                    @if (item.Date.Month == 12)
                    {
                        @Html.DisplayName("Dezembro")
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>

<p>
    <a asp-action="DeleteBatch" class="btn btn-link alert-link"  method="post">Excluir todos registros anteriores a 1 ano atrás.</a>
</p>