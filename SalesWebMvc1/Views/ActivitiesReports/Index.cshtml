@model SecretaryWebMvc.Models.ViewModels.ActivitiesReportFormViewModel
@{
    ViewData["Title"] = "Atividades Ministeriais";
}

<h2>@ViewData["Title"]</h2>

<br />
<p>
    <div class="col-md-10">
        <a asp-action="Create" class="btn btn-default bg-primary">Adicionar Atividades</a>
        <a asp-action="PublishersRelated" class="btn btn-default bg-primary">Pub. Não relataram ainda</a>
    </div>
    <div class="col-md-2">
        <a asp-action="SumAssistance" class="btn btn-default bg-primary">Assistência Reunião</a>
    </div>
</p>
<br />
<br />
<br />
<div class="container-fluid">
    <div class="row">
        <div class="col-md-5">
            <form asp-action="Index">
                <div class="row">
                    <div class="col-md-9">
                        <div class="form-group">
                            <label class="control-label"> Pesquise por Publicador</label>
                            <select asp-for="ActivitiesReport.PublisherId" asp-items="@(new SelectList( @Model.Publishers ,"Id","FullName"))" id="cbcategoria" class="form-control">
                                <option disabled selected>Selecione</option>
                            </select>
                        </div>
                    </div>
                    </br>
                    <button type="submit" class="btn btn-default" style="margin-left: 5px;margin-top: 5px;">Buscar</button>
                    <button type="submit" class="btn btn-primary " style="margin-left: 46px;margin-top: 5px;">Voltar com todas Ativ.</button>

                </div>

            </form>
        </div>

        <div class="col-md-5" style="padding-left: 0px;">
            <form asp-action="Index">

                <div class="col-md-8">
                    <div class="form-group">
                        <label class="control-label">Pesquise por Mês</label>
                        <input type="month" class="form-control" name="Date" id="Date" />
                    </div>
                </div>
                </br>
                <button type="submit" class="btn btn-default" style="margin-left: 5px;margin-top: 5px;">Buscar</button>

            </form>

        </div>

        <div class="col-md-2" style="margin-left:-18px;">

            <form asp-action="Index">
                <br />
                <input type="hidden" value="true" asp-for="ActivitiesReport.Publisher.Ispioneer" />
                <button type="submit" class="btn btn-default" style="margin-left: 5px;margin-top: 5px;">Buscar Por Pioneiro R.</button>
            </form>
        </div>

    </div>


    <p class="col-md-6">
        <a type="button" class="btn btn-link alert-link" data-toggle="modal" data-target="#myModal"> Excluir todos registros anteriores a 1 ano atrás. </a>
    </p>

    <div class="table-cont">

        <table class="table table-striped">

            <thead  style="display: block; width: 150%;">
                <tr class="btn-primary bg-success">
                    <th style="width: 200px;">
                        <span style="margin-right:0px; font-size:10px; color:aliceblue;"> @Model.ActivitiesReports.Count() / @Model.Publishers.Count() |</span>
                        <label style="margin-left:30px">Nome</label>

                    </th>
                    <th style="width: 150px; padding-left: 30px;">
                        <label>Publicações</label>
                    </th>
                    <th style="width: 90px;">
                        <label>Video</label>
                    </th>
                    <th style="width: 90px;">
                        <label>Horas</label>
                    </th>
                    <th style="width: 90px;">
                        <label>Revisitas</label>
                    </th>
                    <th style="width: 90px;">
                        <label>Estudos</label>
                    </th>
                    <th style="width: 100px;">
                        <label>Horas Adicionais</label>
                    </th>
                    <th style="width: 110px;">
                        <label>Observações</label>
                    </th>
                    <th style="width: 90px;">
                        <label>Mês</label>
                    </th>
                    <th>
                    </th>
                    <th>
                        <label >Edição</label>
                    </th>
                </tr>
            </thead>
            <tbody  style="display: block; height: 600px;  overflow-y: scroll; overflow-x: hidden; width: 100%;">
                @foreach (var item in Model.ActivitiesReports)
                {
                    <tr>
                        <td style="width: 250px;">
                            @Html.DisplayFor(x => item.Publisher.FullName)
                        </td>
                        <td style="width: 110px;">
                            @Html.DisplayFor(x => item.Publications)
                        </td>
                        <td style="width: 90px;">
                            @Html.DisplayFor(x => item.Video)
                        </td>
                        <td style="width: 100px;">
                            @Html.DisplayFor(x => item.Hours)
                        </td>
                        <td style="width: 95px;">
                            @Html.DisplayFor(x => item.Revisits)
                        </td>
                        <td style="width: 90px;">
                            @Html.DisplayFor(x => item.BibleStudies)
                        </td>
                        <td style="width: 85px;">
                            @Html.DisplayFor(x => item.PlusHours)
                        </td>
                        <td style="width: 100px;">
                            @Html.DisplayFor(x => item.Observation)
                        </td>
                        <td style="width: 80px;">
                            @Html.DisplayName(@Model.Month(item.Date.Month))
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                        </td>
                    </tr>
                }
            </tbody>

        </table>

        <div class="container">
            <div class="modal fade " id="myModal" role="dialog">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4>Deseja realmente excluir esses relatórios?</h4>
                        </div>
                        <div class="modal-body">
                            <h5 class="modal-title">A exclusão será definitiva, não terá como recuperar os dados</h5>
                            <br />
                            <div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <center>
                                            <div class="form-group">
                                                <a asp-action="DeleteBatch" class="btn btn-danger" method="post">Excluir Todos</a>
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                                            </div>
                                        </center>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>


