@model SecretaryWebMvc.Models.Congregation

@{
    ViewData["Title"] = "Congregação";

}

<h2>Minha Congregação</h2>
<br />
<br />
<p>
    <a asp-action="Create" class="btn btn-default bg-primary">Adicionar Congregação</a>
    <a asp-action="GoUser" class="btn btn-default bg-primary">Vincular uma Congregação</a>
</p>
<br />

<table class="table table-striped table-hover">
    <thead>
        <tr class="btn-primary bg-success ">
            <th>
                <label>Nome da Congregação</label>
            </th>
            <th>
                <label>Cidade</label>
            </th>
            <th>
                <label>Estado</label>
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>

        <tr>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.State)
            </td>
            <td>

                <a type="button" class="btn btn-link alert-link" data-toggle="modal" data-target="#myModal"> Edit </a>
                <a type="button" class="btn btn-link alert-link" data-toggle="modal" data-target="#myModal2"> Delete </a>
            </td>
        </tr>
    </tbody>
</table>


<div class="container">
    <div class="modal fade " id="myModal" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Editar</h4>
                </div>
                <div class="modal-body">

                    <br />
                    <div>
                        <div class="row">
                            <div class="col-md-12">
                                <form asp-action="Edit">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="Id" />
                                    <input type="hidden" asp-for="SumPublishers" />
                                    <div class="form-group">
                                        <label class="control-label">Nome da Congregação</label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Cidade</label>
                                        <input asp-for="City" class="form-control" />
                                        <span asp-validation-for="City" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Estado</label>
                                        <input asp-for="State" class="form-control" />
                                        <span asp-validation-for="State" class="text-danger"></span>
                                    </div>

                                    <div class="modal-footer">
                                        <center>
                                            <div class="form-group">
                                                <input type="submit" value="Editar" class="btn btn-danger" />
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                                            </div>
                                        </center>

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="modal fade" id="myModal2" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title" style="color:black">Deletar</h4>
                </div>
                <div class="modal-body">
                    <center>
                        <h4 class="modal-title" style="color:red">ATENÇÃO</h4>

                        <h4>
                            Deseja realmente excluir a congregação:
                        </h4><h2>@Html.DisplayFor(modelItem => modelItem.Name)</h2>
                        <h4  style="color:red">Todos os publicadores dessa congregação, também serão excluidos!!</h4>
                        <br />
                        <br />
                        <br />

                        <div class="row">
                            <div class="row">
                                <div class="col-md-12">
                                    <form asp-action="Delete">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input type="hidden" asp-for="Id" />

                                        <div class="form-group">
                                            <input type="submit" value="Excluir" class="btn btn-danger" />
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </center>
                </div>
            </div>
        </div>
    </div>

</div>
