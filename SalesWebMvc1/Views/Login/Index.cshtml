@model SecretaryWebMvc.Models.Users


@if (!User.Identity.IsAuthenticated)
{
    <div asp-validation-summary="All" class="text-danger col-sm-4 col-sm-offset-4">Olá Bem vindo! Você ainda não está logado. Faça login ou crie uma conta abaixo.</div>
}
    
<form asp-action="ChecarLogin" method="post">
    <div>
        <div asp-validation-summary="All" class="text-danger"></div>

        <br />
        <br />
        <h2 class="col-sm-4 col-sm-offset-4" text-left">Login</h2>
        <br />
        <br />
        <br />
        <br />
        <br />

        <div class="row">
            @*<div class="col-sm-4 col-sm-offset-4" text-left">
                    <label for="userId" class="form-label">Usuário</label>
                    <input type="email" class="form-control" name="Email" id="Email" placeholder="nome@exemplo.com" />
                </div>*@
            <div class="form-group col-sm-4 col-sm-offset-4" text-left">
                <label class="control-label">Usuário</label>
                <input asp-for="Email" class="form-control" name="Email" id="Email" placeholder="nome@exemplo.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>


        </div>
        <br />
        <div class="form-group col-sm-4 col-sm-offset-4" text-left">
            <label for="userPassword" class="form-label" text-left>Senha</label>
            <input asp-for="Senha" class="form-control" name="Senha" id="Senha" placeholder="Digite sua senha" />
            <span asp-validation-for="Senha" class="text-danger"></span>

        </div>
        <br />
        <div class="row col-sm-4 col-sm-offset-4" text-left">
            <p>
                <a asp-action="Create" class="col-sm-6 col-sm-offset-3 ">Criar nova conta </a>
            </p>

            <br />

            <div class="button">
                <button class="btn btn-primary" type="submit">Entrar</button>
            </div>
        </div>
    </div>
    <div><hr /><label></label></div>
    <br />
    <br />
    <br />
    <br />
    <br />
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}