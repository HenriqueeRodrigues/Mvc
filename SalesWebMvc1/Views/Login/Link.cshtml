@model SecretaryWebMvc.Models.ViewModels.CongregationFormViewModel

@{
    ViewData["Title"] = "Vincular";
}

<h2>Vincular</h2>

<h4>Usuário a Congregação:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Linky">
            <input type="hidden" asp-for="Users.Id" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Users.Email" class="form-control" />
                <span asp-validation-for="Users.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Nome</label>
                <input asp-for="Users.Nome" class="form-control" readonly="True"/>
                <span asp-validation-for="Users.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="hidden" asp-for="Users.Senha" class="form-control" />
                <span asp-validation-for="Users.Senha" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="hidden" asp-for="Users.IsAdm" class="form-control" />
                <span asp-validation-for="Users.IsAdm" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Congregação</label>
                <select asp-for="Users.CongregationId" asp-items="@(new SelectList(Model.UserCongregations,"Id","Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}