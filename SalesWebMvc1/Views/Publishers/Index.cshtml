@model IEnumerable<SecretaryWebMvc.Models.Publisher>



@{
    ViewData["Title"] = "Publishers";
}


<h2> @ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn-default">Create New</a>
</p>

<table class="table table-striped table-hover">

    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SimpleAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAnointed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsElder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsMinisterialServant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ispioneer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaptismDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Congregation)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(x => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(x => item.SimpleAddress)
                </td>
                <td>
                    @Html.DisplayFor(x => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(x => item.BaptismDate)
                </td>
                <td align="center">
                    @Html.DisplayFor(x => item.IsAnointed)
                </td>
                <td align="center">
                    @Html.DisplayFor(x => item.IsElder)
                </td>
                <td align="center">
                    @Html.DisplayFor(x => item.IsMinisterialServant)
                </td>
                <td align="center">
                    @Html.DisplayFor(x => item.Ispioneer)
                </td>
                <td>
                    @Html.DisplayFor(x => item.Congregation.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>